<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="university.DepartmentController" prefHeight="600" prefWidth="600" style="-fx-background-color: #f7f7f7;">
    <children>
        <VBox spacing="20" layoutX="50" layoutY="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
            <!-- عنوان الشاشة -->
            <Label text="إدارة الأقسام" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

            <!-- حقل إدخال اسم القسم -->
            <HBox spacing="10">
                <Label text="اسم القسم:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <TextField fx:id="departmentNameField" promptText="أدخل اسم القسم" style="-fx-pref-width: 250px; -fx-background-color: #f0f0f0;"/>
            </HBox>

            <!-- أزرار الإضافة، التحديث، الحذف -->
            <HBox spacing="15">
                <Button fx:id="addButton" text="إضافة قسم" onAction="#handleAddDepartment" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="deleteButton" text="حذف قسم" onAction="#handleDeleteDepartment" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>

            <!-- Label for displaying operation status messages -->
            <Label fx:id="messageLabel" text="" style="-fx-text-fill: red; -fx-font-size: 14px;" />

            <!-- TableView for displaying department data -->
            <TableView fx:id="departmentTable" style="-fx-pref-height: 300px;">
                <columns>
                    <TableColumn fx:id="departmentNameColumn" text="اسم القسم" prefWidth="400" resizable="true"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
